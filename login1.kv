#:kivy 1.0 
<FlatButton@ButtonBehavior+Label>:
    font_size: 16
<SigninWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[1]/10
    
    canvas.before:
        Color: 
            rgba: (1,1,1,.8)
        Rectangle: 
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50 
        canvas.before:
            Color: 
                rgba: (.06,.45,.45,.7)
            Rectangle: 
                size: self.size
                pos: self.pos
        AnchorLayout:
            size_hint_x: None
            anchor_x: 'right'
            FlatButton:
                text: 'x'
    
    BoxLayout: 
        Image:
            source: 'logo.png'
    
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 100
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: username_field
                hint_text: 'Usuario'
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
                id: pwd_field
                hint_text: root.stringProperty_pwd_field
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: 'Entrar'
            size_hint_y: None
            height: 40
            background_color: (.06,.45,.45,.7)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2