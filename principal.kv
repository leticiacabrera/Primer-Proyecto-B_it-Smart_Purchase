#:kivy 1.0 
<FlatButton@ButtonBehavior+Label>:
    font_size: 16
<SigninWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[1]/10
    
    canvas.before:
        Color: 
            rgba: (1,1,1,.8)
        Rectangle: 
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50 
        canvas.before:
            Color: 
                rgba: (.06,.45,.45,.7)
            Rectangle: 
                size: self.size
                pos: self.pos
        AnchorLayout:
            size_hint_x: None
            anchor_x: 'right'
            FlatButton:
                text: 'x'
    
    BoxLayout: 
        Image:
            source: 'logo.png'
    
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 100
        Button:
            text: 'Login'
            size_hint_y: None
            height: 40
            background_color: (.06,.45,.45,.7)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 20
        Button:
            text: 'Registro'
            size_hint_y: None
            height: 40
            background_color: (.06,.45,.45,.7)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2